{% extends 'base.html.twig' %}

{% block title %}{{ user.name }} - StreamNow{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {# En-tête du profil #}
    <div class="bg-gray-800/50 rounded-2xl border border-gray-700/50 overflow-hidden mb-8">
        {# Bannière #}
        <div class="h-32 md:h-48 bg-gradient-to-r from-purple-900/50 via-pink-900/50 to-purple-900/50"></div>
        
        {# Infos utilisateur #}
        <div class="px-6 pb-6">
            <div class="flex flex-col md:flex-row md:items-end md:justify-between -mt-12 md:-mt-16">
                {# Avatar et nom #}
                <div class="flex flex-col md:flex-row md:items-end space-y-4 md:space-y-0 md:space-x-6">
                    <div class="w-24 h-24 md:w-32 md:h-32 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center border-4 border-gray-900 shadow-xl">
                        <span class="text-white text-4xl md:text-5xl font-bold">{{ user.name|slice(0, 1)|upper }}</span>
                    </div>
                    <div class="pb-2">
                        <h1 class="text-2xl md:text-3xl font-bold text-white">{{ user.name }}</h1>
                        <p class="text-gray-400 mt-1">Membre depuis {{ user.createdAt|date('F Y') }}</p>
                    </div>
                </div>
                
                {# Stats et bouton s'abonner #}
                <div class="flex flex-col md:flex-row items-start md:items-center space-y-4 md:space-y-0 md:space-x-6 mt-4 md:mt-0">
                    {# Stats #}
                    <div class="flex space-x-6">
                        <div class="text-center">
                            <p class="text-2xl font-bold text-white">{{ user.abonnes|length }}</p>
                            <p class="text-gray-400 text-sm">Abonnés</p>
                        </div>
                        <div class="text-center">
                            <p class="text-2xl font-bold text-white">{{ user.videos|length }}</p>
                            <p class="text-gray-400 text-sm">Vidéos</p>
                        </div>
                    </div>
                    
                    {# Bouton s'abonner #}
                    {% if app.user and app.user.id != user.id %}
                    <form action="{{ path('app_user_subscribe', {id: user.id}) }}" method="post" data-turbo="false">
                        <input type="hidden" name="_token" value="{{ csrf_token('subscribe' ~ user.id) }}">
                        {% if isSubscribed %}
                        <button type="submit" class="px-6 py-2 border-2 border-gray-600 text-gray-300 font-semibold rounded-full hover:bg-gray-700 hover:border-gray-500 transition duration-300 flex items-center space-x-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Abonné</span>
                        </button>
                        {% else %}
                        <button type="submit" class="px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-semibold rounded-full shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transition duration-300">
                            S'abonner
                        </button>
                        {% endif %}
                    </form>
                    {% elseif app.user and app.user.id == user.id %}
                    <a href="{{ path('app_user') }}" class="px-6 py-2 border-2 border-purple-500/50 text-purple-400 font-semibold rounded-full hover:bg-purple-500/10 transition duration-300">
                        Modifier mon profil
                    </a>
                    {% elseif not app.user %}
                    <a href="{{ path('app_login') }}" class="px-6 py-2 bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-semibold rounded-full shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transition duration-300">
                        Se connecter pour s'abonner
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Vidéos de l'utilisateur #}
    <div>
        <h2 class="text-xl font-bold text-white mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            Vidéos de {{ user.name }}
        </h2>

        {% if user.videos|length > 0 %}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for video in user.videos %}
            <div class="relative group">
                <a href="{{ path('app_video_show', {id: video.id}) }}" class="block">
                    <div class="bg-gray-800/50 rounded-xl overflow-hidden border border-gray-700/50 hover:border-purple-500/50 transition duration-300 hover:shadow-xl hover:shadow-purple-500/10">
                        {# Miniature #}
                        <div class="relative aspect-video overflow-hidden">
                            <img src="{{ video.thumbnail }}" alt="{{ video.title }}" 
                                class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                                onerror="this.src='https://via.placeholder.com/640x360/1f2937/6b7280?text=StreamNow'">
                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent opacity-0 group-hover:opacity-100 transition duration-300"></div>
                            
                            {# Icône play au hover #}
                            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
                                <div class="w-14 h-14 bg-purple-600/90 rounded-full flex items-center justify-center shadow-lg shadow-purple-500/50">
                                    <svg class="w-7 h-7 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"></path>
                                    </svg>
                                </div>
                            </div>
                            
                            {# Badge vues #}
                            <div class="absolute bottom-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded">
                                {{ video.views|number_format(0, ',', ' ') }} vues
                            </div>
                        </div>
                        
                        {# Infos vidéo #}
                        <div class="p-4">
                            <h3 class="text-white font-semibold text-sm line-clamp-2 group-hover:text-purple-400 transition mb-2">
                                {{ video.title }}
                            </h3>
                            <div class="flex items-center justify-between text-gray-500 text-xs">
                                <span>{{ video.views|number_format(0, ',', ' ') }} vues</span>
                                <span>{{ video.createdAt|date('d/m/Y') }}</span>
                            </div>
                        </div>
                    </div>
                </a>
                
                {# Bouton crayon pour modifier (visible uniquement sur son propre profil) #}
                {% if app.user and app.user.id == user.id %}
                <a href="{{ path('app_video_edit', {id: video.id}) }}" 
                    class="absolute top-2 right-2 w-9 h-9 bg-gray-900/80 hover:bg-purple-600 border border-gray-700 hover:border-purple-500 rounded-lg flex items-center justify-center text-gray-400 hover:text-white transition duration-200 opacity-0 group-hover:opacity-100 z-10"
                    title="Modifier la vidéo">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
                    </svg>
                </a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-16 bg-gray-800/30 rounded-xl border border-gray-700/50">
            <div class="w-20 h-20 mx-auto mb-4 bg-gray-700/50 rounded-full flex items-center justify-center">
                <svg class="w-10 h-10 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
            </div>
            <p class="text-gray-400 text-lg">{{ user.name }} n'a pas encore publié de vidéo</p>
            {% if app.user and app.user.id == user.id %}
            <a href="{{ path('app_video_new') }}" class="inline-flex items-center mt-4 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-medium rounded-full shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transition duration-300">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Publier ma première vidéo
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>

    {# Section Mes abonnés - Visible uniquement sur son propre profil #}
    {% if app.user and app.user.id == user.id %}
    <div class="mt-10">
        <h2 class="text-xl font-bold text-white mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Mes abonnés
            <span class="ml-2 text-sm font-normal text-gray-400">({{ user.abonnes|length }})</span>
        </h2>

        {% if user.abonnes|length > 0 %}
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
            {% for abonne in user.abonnes %}
            <a href="{{ path('app_user_profile', {id: abonne.id}) }}" class="group">
                <div class="bg-gray-800/50 hover:bg-gray-800 border border-gray-700/50 hover:border-purple-500/50 rounded-xl p-4 transition duration-300 text-center">
                    <div class="w-16 h-16 mx-auto bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center mb-3 group-hover:ring-2 group-hover:ring-purple-400 transition">
                        <span class="text-white text-xl font-bold">{{ abonne.name|slice(0, 1)|upper }}</span>
                    </div>
                    <p class="text-white font-medium text-sm truncate group-hover:text-purple-400 transition">{{ abonne.name }}</p>
                    <p class="text-gray-500 text-xs mt-1">{{ abonne.videos|length }} vidéo{{ abonne.videos|length > 1 ? 's' : '' }}</p>
                </div>
            </a>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-12 bg-gray-800/30 rounded-xl border border-gray-700/50">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-700/50 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
            <p class="text-gray-400">Vous n'avez pas encore d'abonnés</p>
            <p class="text-gray-500 text-sm mt-1">Publiez des vidéos pour attirer des abonnés !</p>
        </div>
        {% endif %}
    </div>
    {% endif %}
</div>
{% endblock %}
