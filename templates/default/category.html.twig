{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - StreamNow{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {# En-tête de la catégorie #}
    <div class="mb-8">
        <div class="flex items-center space-x-4 mb-4">
            <img src="{{ category.logo }}" alt="{{ category.name }}" class="w-16 h-16 object-contain">
            <div>
                <h1 class="text-2xl md:text-3xl font-bold text-white">{{ category.name }}</h1>
                <p class="text-gray-400">{{ videos|length }} vidéo{{ videos|length > 1 ? 's' : '' }}</p>
            </div>
        </div>
        <a href="{{ path('app_home') }}" class="inline-flex items-center text-purple-400 hover:text-purple-300 transition">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Retour à l'accueil
        </a>
    </div>

    {% if videos|length > 0 %}
        {# Grille de vidéos #}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for video in videos %}
                {% include 'components/_video_card.html.twig' with {video: video} %}
            {% endfor %}
        </div>
    {% else %}
        {# Aucune vidéo #}
        <div class="text-center py-16">
            <div class="w-24 h-24 mx-auto mb-6 bg-gray-800/50 rounded-full flex items-center justify-center p-4">
                <img src="{{ category.logo }}" alt="{{ category.name }}" class="w-full h-full object-contain">
            </div>
            <h2 class="text-xl font-semibold text-white mb-2">Aucune vidéo dans cette catégorie</h2>
            <p class="text-gray-400 mb-6">Soyez le premier à publier une vidéo dans "{{ category.name }}" !</p>
            {% if app.user %}
            <a href="{{ path('app_video_new') }}" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-medium rounded-full shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transition duration-300">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Publier une vidéo
            </a>
            {% else %}
            <a href="{{ path('app_login') }}" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-medium rounded-full shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transition duration-300">
                Se connecter
            </a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
