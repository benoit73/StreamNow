{% extends 'base.html.twig' %}

{% block title %}Mes abonnements - StreamNow{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    {# En-tête #}
    <div class="mb-8">
        <h1 class="text-2xl md:text-3xl font-bold text-white flex items-center">
            <svg class="w-8 h-8 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            Mes abonnements
        </h1>
        <p class="text-gray-400 mt-2">
            Vous êtes abonné à {{ subscriptions|length }} créateur{{ subscriptions|length > 1 ? 's' : '' }}
        </p>
    </div>

    {% if subscriptions|length > 0 %}
        {# Liste des créateurs suivis #}
        <div class="mb-10">
            <h2 class="text-lg font-semibold text-white mb-4">Créateurs suivis</h2>
            <div class="flex flex-wrap gap-4">
                {% for creator in subscriptions %}
                    {% include 'components/_creator_card.html.twig' with {creator: creator} %}
                {% endfor %}
            </div>
        </div>

        {# Vidéos des abonnements #}
        {% if videos|length > 0 %}
        <div>
            <h2 class="text-lg font-semibold text-white mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                Dernières vidéos de vos abonnements
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {% for video in videos %}
                    {% include 'components/_video_card.html.twig' with {video: video} %}
                {% endfor %}
            </div>
        </div>
        {% else %}
        <div class="text-center py-12 bg-gray-800/30 rounded-xl border border-gray-700/50">
            <div class="w-16 h-16 mx-auto mb-4 bg-gray-700/50 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
            </div>
            <p class="text-gray-400">Les créateurs que vous suivez n'ont pas encore publié de vidéos</p>
        </div>
        {% endif %}

    {% else %}
        {# Aucun abonnement #}
        {% include 'components/_empty_state.html.twig' with {
            icon: 'users',
            title: 'Aucun abonnement',
            message: 'Vous n\'\u00eates abonné \u00e0 aucun créateur pour le moment. Découvrez des vidéos et abonnez-vous aux créateurs que vous aimez !'
        } %}
        <div class="text-center mt-6">
            <a href="{{ path('app_home') }}" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-medium rounded-full shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transition duration-300">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Découvrir des vidéos
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
