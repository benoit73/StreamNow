{# Grille de catégories - Paramètres: categories #}
{% if categories|length > 0 %}
<div class="mt-12">
    <h2 class="text-2xl font-bold text-white mb-6 flex items-center">
        <svg class="w-7 h-7 mr-3 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        Explorer par catégorie
    </h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
        {% set colors = [
            'from-pink-500 to-rose-500',
            'from-purple-500 to-indigo-500',
            'from-green-500 to-emerald-500',
            'from-blue-500 to-cyan-500',
            'from-orange-500 to-amber-500',
            'from-teal-500 to-cyan-500',
            'from-red-500 to-pink-500',
            'from-yellow-500 to-orange-500'
        ] %}
        {% for category in categories %}
            {% include 'components/_category_card.html.twig' with {
                category: category,
                color: colors[loop.index0 % colors|length]
            } %}
        {% endfor %}
    </div>
</div>
{% endif %}
