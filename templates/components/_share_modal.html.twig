{# Composant modale de partage #}
{# Paramètres: url (string) - L'URL à partager #}

<div x-data="{ open: false, copied: false }" class="relative">
    <button @click="open = true" class="flex items-center space-x-2 px-4 py-2 bg-gray-700/50 hover:bg-gray-700 rounded-full transition">
        <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
        </svg>
        <span class="text-gray-300 text-sm">Partager</span>
    </button>
    
    {# Modale de partage #}
    <div x-show="open" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        @click.away="open = false; copied = false"
        @keydown.escape.window="open = false; copied = false"
        class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/70 backdrop-blur-sm"
        style="display: none;">
        
        <div @click.stop class="bg-gray-800 rounded-2xl border border-gray-700 shadow-2xl w-full max-w-md p-6">
            {# En-tête #}
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-xl font-bold text-white">Partager la vidéo</h3>
                <button @click="open = false; copied = false" class="text-gray-400 hover:text-white transition">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            {# URL à copier #}
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-400 mb-2">Lien de la vidéo</label>
                <div class="flex items-center space-x-2">
                    <input type="text" readonly 
                        value="{{ url }}"
                        class="flex-1 px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-gray-300 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                    <button @click="navigator.clipboard.writeText('{{ url }}'); copied = true; setTimeout(() => copied = false, 2000)"
                        class="px-4 py-3 rounded-lg font-medium transition duration-200"
                        :class="copied ? 'bg-green-600 text-white' : 'bg-purple-600 hover:bg-purple-700 text-white'">
                        <span x-show="!copied" class="flex items-center space-x-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
                            </svg>
                            <span>Copier</span>
                        </span>
                        <span x-show="copied" class="flex items-center space-x-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Copié !</span>
                        </span>
                    </button>
                </div>
            </div>
            
            {# Message de confirmation #}
            <div x-show="copied" x-transition class="p-3 bg-green-500/10 border border-green-500/30 rounded-lg">
                <p class="text-green-400 text-sm text-center">✓ Lien copié dans le presse-papiers !</p>
            </div>
        </div>
    </div>
</div>
