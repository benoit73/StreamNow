{% extends 'base_auth.html.twig' %}

{% block title %}Inscription - StreamNow{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4 py-12">
    <div class="max-w-md w-full space-y-8">
        {# Logo et titre #}
        <div class="text-center">
            <div class="flex justify-center mb-4">
                <div class="w-16 h-16 bg-gradient-to-br from-purple-600 to-pink-500 rounded-2xl flex items-center justify-center shadow-lg shadow-purple-500/30">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
            </div>
            <h2 class="text-3xl font-extrabold text-white">
                Créer un compte
            </h2>
            <p class="mt-2 text-sm text-gray-400">
                Rejoignez la communauté StreamNow
            </p>
        </div>

        {# Carte d'inscription #}
        <div class="bg-gray-800/50 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-700/50 p-8">
            {# Affichage des erreurs globales #}
            {% if registrationForm.vars.errors|length > 0 %}
                <div class="mb-6 p-4 bg-red-500/10 border border-red-500/50 rounded-lg">
                    {% for error in registrationForm.vars.errors %}
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-red-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="text-red-400 text-sm">{{ error.message }}</span>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-5', 'novalidate': 'novalidate'}}) }}
                
                {# Champ Nom #}
                <div>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none" style="top: 28px;">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                        </div>
                        {{ form_row(registrationForm.name, {
                            'attr': {'class': 'w-full pl-10 pr-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200', 'placeholder': 'Votre nom complet'}
                        }) }}
                    </div>
                    {% if registrationForm.name.vars.errors|length > 0 %}
                        <p class="mt-1 text-sm text-red-400">{{ registrationForm.name.vars.errors[0].message }}</p>
                    {% endif %}
                </div>

                {# Champ Email #}
                <div>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none" style="top: 28px;">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"></path>
                            </svg>
                        </div>
                        {{ form_row(registrationForm.email, {
                            'attr': {'class': 'w-full pl-10 pr-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200', 'placeholder': 'vous@exemple.com'}
                        }) }}
                    </div>
                    {% if registrationForm.email.vars.errors|length > 0 %}
                        <p class="mt-1 text-sm text-red-400">{{ registrationForm.email.vars.errors[0].message }}</p>
                    {% endif %}
                </div>

                {# Champ Mot de passe #}
                <div>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none" style="top: 28px;">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                        </div>
                        {{ form_row(registrationForm.plainPassword.first, {
                            'attr': {'class': 'w-full pl-10 pr-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200', 'placeholder': '••••••••'}
                        }) }}
                    </div>
                </div>

                {# Champ Confirmation mot de passe #}
                <div>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none" style="top: 28px;">
                            <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                        </div>
                        {{ form_row(registrationForm.plainPassword.second, {
                            'attr': {'class': 'w-full pl-10 pr-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition duration-200', 'placeholder': '••••••••'}
                        }) }}
                    </div>
                    {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                        <p class="mt-1 text-sm text-red-400">{{ registrationForm.plainPassword.vars.errors[0].message }}</p>
                    {% endif %}
                </div>

                {# Checkbox conditions d'utilisation #}
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {'class': 'w-4 h-4 text-purple-600 bg-gray-800 border-gray-700 rounded focus:ring-purple-500 focus:ring-2'}
                        }) }}
                    </div>
                    <div class="ml-3">
                        <label class="text-sm text-gray-300">
                            J'accepte les <a href="#" class="text-purple-400 hover:text-purple-300 underline">conditions d'utilisation</a> 
                            et la <a href="#" class="text-purple-400 hover:text-purple-300 underline">politique de confidentialité</a>
                        </label>
                        {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                            <p class="mt-1 text-sm text-red-400">{{ registrationForm.agreeTerms.vars.errors[0].message }}</p>
                        {% endif %}
                    </div>
                </div>

                {# Bouton d'inscription #}
                <button type="submit" 
                    class="w-full py-3 px-4 bg-gradient-to-r from-purple-600 to-pink-500 hover:from-purple-700 hover:to-pink-600 text-white font-semibold rounded-lg shadow-lg shadow-purple-500/30 hover:shadow-purple-500/50 transition duration-300 transform hover:scale-[1.02]">
                    Créer mon compte
                </button>
            {{ form_end(registrationForm) }}

            {# Séparateur #}
            <div class="mt-6">
                <div class="relative">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-700"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-4 bg-gray-800/50 text-gray-400">Déjà inscrit ?</span>
                    </div>
                </div>
            </div>

            {# Lien vers connexion #}
            <div class="mt-6">
                <a href="{{ path('app_login') }}" 
                    class="w-full flex justify-center py-3 px-4 border-2 border-purple-500/50 text-purple-400 font-semibold rounded-lg hover:bg-purple-500/10 hover:border-purple-500 transition duration-300">
                    Se connecter
                </a>
            </div>
        </div>

        {# Footer #}
        <p class="text-center text-xs text-gray-500">
            © {{ "now"|date("Y") }} StreamNow. Tous droits réservés.
        </p>
    </div>
</div>
{% endblock %}
